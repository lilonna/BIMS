@model Tuple<List<Notification>, List<Owner>>

@{
}
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>@ViewData["Title"]</h2>
<p>Welcome to the Admin Dashboard!</p>



<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Register New User</h5>
                <p class="card-text">Create a new user (Admin or Customer).</p>
                <a  asp-controller="Users" asp-action="Register" class="btn btn-primary">Register User</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Manage Users</h5>
                <p class="card-text">View and manage all users.</p>
                <a asp-controller="Users" asp-action="Index" class="btn btn-warning">Manage Users</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Manage Users</h5>
                <p class="card-text">View and manage all users.</p>
                <a href="@Url.Action("DeliveryPersonnel", "Admin")" class="btn btn-primary">
                    View Delivery Personnel
                </a>
            </div>
        </div>
    </div>
   
</div>
<!-- Owner Approvals Section -->
<h3>Pending Owner Approvals</h3>
<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>TIN</th>
            <th>License</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var owner in Model.Item2) // Access Owners List
        {
            <tr>
                <td>@owner.FullName</td>
                <td>@owner.Tin</td>
                <td>
                    @if (!string.IsNullOrEmpty(owner.License))
                    {
                        <a href="javascript:void(0);" data-toggle="modal" data-target="#licenseModal-@owner.Id">
                            <img src="~/images/@owner.License" alt="License" width="100" height="100" style="cursor: pointer; border-radius: 5px;" />
                        </a>

                        <!-- Modal for License Image -->
                        <div class="modal fade" id="licenseModal-@owner.Id" tabindex="-1" aria-labelledby="licenseModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">License Image</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body text-center">
                                        <img src="~/images/@owner.License" class="img-fluid" alt="License Image" style="max-width: 100%;" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <span>No License Available</span>
                    }
                </td>
                <td>
                    <form asp-action="Approve" method="post">
                        <input type="hidden" name="id" value="@owner.Id" />
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>




<h3>Notifications</h3>
@if (Model.Item1.Any())
{
    <ul class="list-group">
        @foreach (var notification in Model.Item1)
        {
            <li class="list-group-item @(notification.IsRead ? "text-muted" : "font-weight-bold")">
                @notification.Message - @notification.NotificationDate.ToLocalTime().ToString("MMM dd, yyyy HH:mm")
                @if (!notification.IsRead)
                {
                    <a asp-action="MarkAsRead" asp-route-notificationId="@notification.Id" class="btn btn-sm btn-success float-end">Mark as Read</a>
                }
            </li>
        }
    </ul>
}
else
{
    <p>No new notifications.</p>
}
<div class="col-md-4">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">View Shop Owners</h5>
            <p class="card-text">List of all users who own shops.</p>
            <a href="@Url.Action("ShopOwners", "Admin")" class="btn btn-primary">View Shop Owners</a>
        </div>
    </div>
</div>
