@model List<(BIMS.Models.User, BIMS.Models.Shop)>

@{
    ViewData["Title"] = "Shop Owners";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Shop Name</th>
                <th>Business Area</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (user, shop) in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@(shop?.Name ?? "N/A")</td>
                    <td>@(shop.BusinessArea)</td>
                    <td>
                        <a href="@Url.Action("Details", "Users", new { id = user.Id })" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No shop owners found.</p>
}
