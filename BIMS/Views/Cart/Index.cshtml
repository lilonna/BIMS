@{
}
@model List<BIMS.Models.Cart>

@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Item.Name</td>
                    <td>@item.Item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@(item.TotalPrice.ToString("C"))</td>
                    <td>
                        <a href="@Url.Action("RemoveFromCart", "Cart", new { id = item.Id })" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Checkout", "Cart")" class="btn btn-primary">Proceed to Checkout</a>
}
