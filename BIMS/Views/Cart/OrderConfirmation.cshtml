@model BIMS.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<h2>@ViewData["Title"]</h2>

<p>Thank you for your order! Your order has been successfully processed.</p>

<h3>Order Details:</h3>
<table>
    <tr>
        <th>Order ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Order Date</th>
        <td>@Model.OrderDate</td>
    </tr>
    <tr>
        <th>Total Amount</th>
        <td>@Model.TotalAmount</td>
    </tr>
</table>

<h3>Items in your order:</h3>
<table>
    <tr>
        <th>Item Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total Price</th>
    </tr>
    @if (Model.OrderItems != null && Model.OrderItems.Any())
{
    @foreach (var item in Model.OrderItems)
    {
        <tr>
            <td>@item.Item.Name</td>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
            <td>@item.TotalPrice</td>
        </tr>
    }
    }
    else
    {
        <tr><td colspan="4">No items in this order.</td></tr>
    }
</table>

<p>Your order will be shipped soon. Thank you for shopping with us!</p>
