@model BIMS.Models.Order

<h2>Order Confirmation</h2>
<p>Order ID: @Model.Id</p>
<p>Order Date: @Model.OrderDate</p>
<p>Total Amount: @Model.TotalAmount</p>
<p>Status: @Model.Status</p>
<p>Payment Status: @Model.PaymentStatus</p>

<!-- You can loop through the order items and display them -->
@if (Model.OrderItems != null && Model.OrderItems.Any())
{
    <h3>Order Items:</h3>
    <ul>
        @foreach (var item in Model.OrderItems)
        {
            <li>@item.ItemId - Quantity: @item.Quantity - Price: @item.Price</li>
        }
    </ul>
}
else
{
    <p>No items in this order.</p>
}
