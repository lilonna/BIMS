@{
    ViewBag.Title = "Payment Success";
}
<style>
    body {
        background-color: #f8f9fa;
    }

    .success-icon {
        animation: bounce 1s;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-20px);
        }

        60% {
            transform: translateY(-10px);
        }
    }
</style>

<div class="container text-center py-5">
    <div class="success-icon mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#28a745" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
        </svg>
    </div>

    <h1 class="text-success mb-4">Payment Successful!</h1>

    <div class="card shadow-sm mx-auto" style="max-width: 500px;">
        <div class="card-body p-4">
            <p class="lead mb-4">@ViewBag.Message</p>

            <div class="text-start">
                <div class="d-flex justify-content-between py-2 border-bottom">
                    <span class="fw-bold">Order ID:</span>
                    <span>@ViewBag.OrderId</span>
                </div>
                <div class="d-flex justify-content-between py-2 border-bottom">
                    <span class="fw-bold">Total Amount:</span>
                    <span class="text-success">@ViewBag.TotalAmount</span>
                </div>
                <div class="d-flex justify-content-between py-2 border-bottom">
                    <span class="fw-bold">Payment Status:</span>
                    <span class="badge bg-success">@ViewBag.PaymentStatus</span>
                </div>
                <div class="d-flex justify-content-between py-2">
                    <span class="fw-bold">Payment Date:</span>
                    <span>@ViewBag.PaymentDate</span>
                </div>
            </div>

            <div class="mt-4">
                <a href="/" class="btn btn-primary">Return Home</a>
                <a href="#" class="btn btn-outline-secondary ms-2">View Order Details</a>
            </div>
        </div>
    </div>

    <div class="mt-4 text-muted">
        <small>Thank you for your purchase! A confirmation has been sent to your email.</small>
    </div>
</div>

