@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/lilo.css" />



<!-- Hero Section -->
<div class="jumbotron text-center text-white bg-primary" style="padding: 4rem 2rem;">
    <h1 class="display-4">Fast & Reliable Delivery Service</h1>
    <p class="lead">Get what you need, when you need it, delivered to your doorstep.</p>
    <a class="btn btn-light btn-lg" asp-controller="Shops" asp-action="Index" role="button">Shop Now</a>
    <a class="btn btn-outline-light btn-lg" asp-controller="About" asp-action="Index" role="button">Learn More</a>
</div>

<!-- Features Section -->
<div class="container py-5">
    <h2 class="text-center mb-5">Why Choose Us?</h2>
    <div class="row">
        <div class="col-md-4 text-center">
            <i class="bi bi-truck fs-1 text-primary"></i>
            <h5 class="mt-3">Fast Delivery</h5>
            <p>We ensure quick and timely deliveries to your doorstep, always on schedule.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-shield-check fs-1 text-primary"></i>
            <h5 class="mt-3">Secure Payments</h5>
            <p>Your payments are safe and secure with multiple payment options available.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-bag-check fs-1 text-primary"></i>
            <h5 class="mt-3">Wide Variety</h5>
            <p>From groceries to electronics, explore a wide range of products.</p>
        </div>
    </div>
</div>

<!-- Call-to-Action Section -->
<div class="bg-light py-5">
    <div class="container text-center">
        <h2>Ready to Make Your First Order?</h2>
        <p class="lead">Join thousands of happy customers who enjoy hassle-free delivery service.</p>
        <a class="btn btn-primary btn-lg" asp-controller="Account" asp-action="Register">Sign Up Now</a>
    </div>
</div>




<div class="row" >
    <h1 class="home-heading">What Are You Looking For?</h1>

    <a class="m-auto col-11 col-md-6 col-lg-3"
       asp-action="Index" asp-controller="Shops">
        <div class="home-link">
        <img class="home-image" src="/images/shopping.jpg" alt="Shops" />
        <h1 class="home-card">
            Shops
        </h1>
        </div>
    </a>
    
