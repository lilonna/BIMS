@{
}
@model List<SubscriptionOption>

<h2>Choose Your Subscription Plan</h2>

<form method="post" asp-action="PayWithChapa">
    @foreach (var option in Model)
    {
        <div>
            <input type="radio" name="subscriptionOptionId" value="@option.Id" />
            @option.SubscriptionPlan.Name - @option.DisplayLabel
        </div>
    }
    <button type="submit">Continue to Payment</button>
</form>
