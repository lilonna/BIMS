@model BIMS.Models.User

@{
    ViewData["Title"] = "Register";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<!-- Register Form -->
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 mx-auto col-sm-10 col-md-6 col-lg-4">

        <h2 class="text-center mb-4 fw-bold">
            Register
        </h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- First Name -->
            <div class="mb-3 position-relative">
                <label asp-for="FirstName" class="form-label fw-semibold">First Name</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="bi bi-person"></i>
                    </span>
                    
                    <input asp-for="FirstName" class="form-control" placeholder="Enter first name" >
                  
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <!-- Middle Name -->
            <div class="mb-3 position-relative">
                <label asp-for="MiddleName" class="form-label fw-semibold">Middle Name</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="bi bi-person"></i>
                    </span>
                    
                    <input asp-for="MiddleName" class="form-control" placeholder="Enter middle name">
                   
                </div>
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>

            <!-- Last Name -->
            <div class="mb-3 position-relative">
                <label asp-for="LastName" class="form-label fw-semibold">Last Name</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="bi bi-person"></i>
                    </span>
                    
                    <input asp-for="LastName" class="form-control" placeholder="Enter last name" >
                   
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="mb-3 position-relative">
                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="bi bi-envelope"></i>
                    </span>
                    
                    <input asp-for="Email" class="form-control" type="email" placeholder="Enter email" >
                    
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Phone Number -->
            <div class="mb-3 position-relative">
                <label asp-for="PhoneNumber" class="form-label fw-semibold">Phone Number</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="bi bi-telephone"></i>
                    </span>
                    
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" >
                   
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Gender -->
            <div class="mb-3 position-relative">
                <label asp-for="GenderId" class="form-label fw-semibold">Gender</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="bi bi-gender-ambiguous"></i>
                    </span>
                   
                    <select asp-for="GenderId" class="form-select" asp-items="ViewBag.GenderId" style="color: gray;"></select>
                    
                </div>
            </div>

            <!-- Password -->
            <div class="mb-3 position-relative">
                <label for="Password" class="form-label fw-semibold">Password</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="bi bi-key"></i>
                    </span>
                    
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" >
                    
                </div>
            </div>

            <!-- Submit Button -->
            <div class="submit-button">
                <button type="submit" class="btn btn-dark text-light w-100 fw-bold" >
                    Register
                </button>
            </div>
        </form>
    </div>
    </div>



